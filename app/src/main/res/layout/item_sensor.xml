<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardSensor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/card_border">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvNombreSensor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            tools:text="Llavero Principal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvCodigoSensor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            tools:text="CÃ³digo: A1B2C3D4"
            app:layout_constraintTop_toBottomOf="@id/tvNombreSensor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvTipoSensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            tools:text="ðŸ”‘ LLAVERO"
            app:layout_constraintTop_toBottomOf="@id/tvCodigoSensor"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvEstadoSensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:padding="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/bg_estado_sensor"
            tools:text="ACTIVO"
            app:layout_constraintTop_toTopOf="@id/tvTipoSensor"
            app:layout_constraintBottom_toBottomOf="@id/tvTipoSensor"
            app:layout_constraintStart_toEndOf="@id/tvTipoSensor" />

        <TextView
            android:id="@+id/tvUsuarioSensor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            tools:text="Usuario: Savka Carvajal"
            app:layout_constraintTop_toBottomOf="@id/tvTipoSensor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnCambiarEstado"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Cambiar Estado"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tvUsuarioSensor"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

