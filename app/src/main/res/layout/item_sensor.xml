<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardSensor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeWidth="0dp"
    android:backgroundTint="#2C2F33">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- CÃ³digo del sensor como tÃ­tulo principal -->
        <TextView
            android:id="@+id/tvCodigoSensor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#AAAAAA"
            android:fontFamily="monospace"
            android:letterSpacing="0.1"
            tools:text="CÃ³digo: A1B2C3D4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvEstadoSensor" />

        <!-- Badge de estado mÃ¡s prominente -->
        <TextView
            android:id="@+id/tvEstadoSensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_rounded_button"
            android:backgroundTint="#4CAF50"
            android:elevation="2dp"
            tools:text="ACTIVO"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Icono y tipo de sensor -->
        <TextView
            android:id="@+id/tvTipoSensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            tools:text="ðŸ”‘ LLAVERO"
            app:layout_constraintTop_toBottomOf="@id/tvCodigoSensor"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Nombre del sensor (oculto si no existe) -->
        <TextView
            android:id="@+id/tvNombreSensor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="#CCCCCC"
            android:visibility="gone"
            tools:text="Llavero Principal"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/tvTipoSensor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Usuario con Ã­cono -->
        <TextView
            android:id="@+id/tvUsuarioSensor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:drawablePadding="8dp"
            tools:text="Usuario: Savka Carvajal"
            app:layout_constraintTop_toBottomOf="@id/tvNombreSensor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- BotÃ³n de cambiar estado (solo admin) -->
        <Button
            android:id="@+id/btnCambiarEstado"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Cambiar Estado"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            app:strokeColor="#667eea"
            app:strokeWidth="2dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvUsuarioSensor"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

